<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.SelectShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallerycontrols="clr-namespace:AtomUIGallery.Controls">
    <gallerycontrols:ShowCasePanel>
        <gallerycontrols:ShowCaseItem
            Title="Basic"
            Description="Basic Usage.">
            <WrapPanel ItemSpacing="10" LineSpacing="10">
                <atom:Select Width="120">
                    <atom:SelectOption Header="Jack"/>
                    <atom:SelectOption Header="Lucy"/>
                    <atom:SelectOption Header="yiminghe"/>
                    <atom:SelectOption Header="Disabled" IsEnabled="False"/>
                </atom:Select>
            </WrapPanel>
        </gallerycontrols:ShowCaseItem>
    </gallerycontrols:ShowCasePanel>
</UserControl>